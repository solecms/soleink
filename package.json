{
	"name": "soleink",
	"version": "1.0.0",
	"description": "",
	"main": "dist/cjs/soleink.js",
	"module": "dist/esm/soleink.js",
	"browser": "dist/umd/soleink.js",
	"types": "dist/types/main.d.ts",
	"scripts": {
		"rmDist": "rimraf dist",
		"prebuild": "npm run rmDist",
		"build:rollup": "rollup -c --bundleConfigAsCjs",
		"build:types": "tsc --emitDeclarationOnly",
		"clean:types": "rimraf dist/types/lib dist/types/components/misc dist/types/components/**/**.test.**",
		"build": "npm run build:rollup && npm run build:types && npm run clean:types",
		"div": "rollup -c -w",
		"rmPack": "rimraf pack",
		"mkPack": "mkdir -p pack",
		"prepack": "npm run rmPack && npm run mkPack",
		"pack": "npm pack && mv soleink-*.tgz ./pack",
		"test": "jest --verbose --coverage",
		"start": "npm run build && npm run pack",
		"app": "parcel src/app/index.html"
	},
	"files": ["dist"],
